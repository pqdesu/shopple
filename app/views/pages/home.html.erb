<div class="container my-3">
  <%# New Arrivals %>
  <div class="row pt-3">
    <div class="d-flex align-items-center justify-content-center p-3 pb-5">
      <h1 class="montserrat-bold">NEW ARRIVALS</h1>
    </div>
    <% @new_arrivals.each do |product| %>
      <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
        <div class="products-detail">
          <%= link_to product_path(product), class: "products-link" do %>
            <%# Image %>
            <div class="products-image mx-auto d-flex flex-column justify-content-center align-items-center">
              <%= image_tag product.image_url %>
            </div>
            <%# Name %>
            <p class="products-name plus-jakarta-sans-bold my-3">
              <%= product.name.truncate(45) %>
            </p>
          <% end %>
          <%# Rating %>
          <div class="star-rating mb-3">
            <%= star_rating(product.rating_rate) %>
            <span class="ms-1"><%= product.rating_rate %>/5</span>
          </div>
          <%# Price %>
          <p class="products-price plus-jakarta-sans-bold"><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    <% end %>
    <%# Button to All products %>
    <div class="d-flex align-items-center justify-content-center">
      <%= link_to products_path, class: "products-link" do %>
        <button class="home-btn">View All</button>
      <% end %>
    </div>
  </div>
  <%# Divider Line %>
  <div class="divider-line"></div>
  <%# Hot Items %>
  <div class="row pt-3">
    <div class="d-flex align-items-center justify-content-center p-3 pb-5">
      <h1 class="montserrat-bold">HOT ITEMS</h1>
    </div>
    <% @hot_items.each do |product| %>
      <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
        <div class="products-detail">
          <%= link_to product_path(product), class: "products-link" do %>
            <%# Image %>
            <div class="products-image mx-auto d-flex flex-column justify-content-center align-items-center">
              <%= image_tag product.image_url %>
            </div>
            <%# Name %>
            <p class="products-name plus-jakarta-sans-bold my-3">
              <%= product.name.truncate(45) %>
            </p>
          <% end %>
          <%# Rating %>
          <div class="star-rating mb-3">
            <%= star_rating(product.rating_rate) %>
            <span class="ms-1"><%= product.rating_rate %>/5</span>
          </div>
          <%# Price %>
          <p class="products-price plus-jakarta-sans-bold"><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>