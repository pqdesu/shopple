<h1>Testing if cart has a show page</h1>
<h1>Your cart</h1>
<% if @cart.nil? || @cart.cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Unit price</th>
        <th>Quantity</th>
        <th>Total price by </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.includes(:product).each do |item| %>
        <tr>
          <td><%= link_to item.product.name, product_path(item.product) %></td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td>
            <%= form_with model: item, url: cart_item_path(item), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, value: item.quantity, min: 1, class: "form-control w-25 d-inline" %>
              <%= f.submit "Update", class: "btn btn-sm btn-secondary ms-2" %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.total_price) %></td>
          <td>
            <%= button_to "Remove", cart_item_path(item), method: :delete, data: { confirm: "Remove this item?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h3>Total: <%= number_to_currency(@cart.total_price) %></h3>
<% end %>
<p><%= button_to "Finish Order", orders_path, method: :post, class: "btn btn-secondary" %></p>
<p><%= link_to "Continue shopping", products_path, class: "btn btn-secondary" %></p>
