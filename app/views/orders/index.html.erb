<h1>Testing to see if routes working</h1>
<% if @orders.empty? %>
  <p>You have no orders yet.</p>
  <%= link_to "Start shopping", products_path, class: "btn btn-secondary" %>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Total</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.created_at.strftime("%B %d, %Y") %></td>
          <td><%= number_to_currency(order.total) %></td>
          <td><span class="badge bg-success"><%= order.status %></span></td>
          <td><%= link_to "View", order_path(order), class: "btn btn-sm btn-info" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
