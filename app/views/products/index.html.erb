<%# Dropdown menu for category %>
<div class="dropdown p-3">
  <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
    Category
  </button>
  <ul class="dropdown-menu">
    <li><%= link_to "All", products_path, class: "product-name" %></li>
    <% @categories.each do |category| %>
      <li><%= link_to category.capitalize, products_path(category: category), class: "product-name" %></li>
    <% end %>
  </ul>
</div>
<%# Products display %>
<div class="container my-4">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <%= link_to product_path(product), class: "product-name" do %>
          <div class="card-product p-3 h-100">
            <img src="<%= product.image_url %>" alt="product image">
            <div class="card-product-infos">
              <h2><%= product.name.truncate(45) %></h2>
              <p><%= number_to_currency(product.price) %></p>
              <p><%= product.category.capitalize %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>