<div class="container my-4">
  <div class="d-flex justify-content-between mb-4">
    <%# Current category text %>
    <div class="">
      <% if params[:category].present? %>
        <h3 class=" category-text"><%= (params[:category]).capitalize %></h3>
      <% else %>
        <h3 class="category-text">All Products</h3>
      <% end %>
    </div>
    <%# Dropdown menu for category %>
    <div class="dropdown">
      <button class="btn dropdown-toggle secondary-button" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Category
      </button>
      <ul class="dropdown-menu">
        <li><%= link_to "All", products_path, class: "product-name" %></li>
        <% @categories.each do |category| %>
          <li><%= link_to category.capitalize, products_path(category: category), class: "product-name" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <%# Products display %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <%= link_to product_path(product), class: "product-name" do %>
          <div class="card-product p-3 h-100">
            <img src="<%= product.image_url %>" alt="product image">
            <div class="card-product-infos">
              <h2><%= product.name.truncate(45) %></h2>
              <p><%= number_to_currency(product.price) %></p>
              <p><%= product.category.capitalize %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>