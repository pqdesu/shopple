<div class="container my-4">
  <div class="d-flex justify-content-between mb-4">
    <%# Current category text %>
    <% if params[:category].present? %>
      <h3 class=" category-text p-2"><%= (params[:category]).capitalize %></h3>
    <% else %>
      <h3 class="category-text p-2">All Products</h3>
    <% end %>
    <%# Dropdown menu for category %>
    <div class="dropdown secondary-button mt-2">
      <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Categories
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <%= link_to products_path, class: "product-name" do %>
          <li class="secondary-button-list">All</li>
        <% end %>
        <% @categories.each do |category| %>
          <%= link_to products_path(category: category), class: "product-name" do %>
            <li class="secondary-button-list"><%= category.capitalize %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <%# Products display %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <%= link_to product_path(product), class: "product-name" do %>
          <div class="card-product p-3 h-100">
            <img src="<%= product.image_url %>" alt="product image">
            <div class="card-product-infos">
              <h2><%= product.name.truncate(45) %></h2>
              <p><%= number_to_currency(product.price) %></p>
              <p><%= product.category.capitalize %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>